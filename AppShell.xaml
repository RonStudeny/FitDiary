<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitDiary"
    xmlns:vm="clr-namespace:FitDiary.Views.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    Title="FitDiary">

    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate vm:MainPage}"/>
        </Tab>
        
        <Tab Title="Edit">
            <ShellContent Title="Edit" ContentTemplate="{DataTemplate vm:EditPage}"/>
        </Tab>

        <Tab Title="Stats">
            <ShellContent Title="Statistics" ContentTemplate="{DataTemplate vm:StatisticsPage}"/>
        </Tab>

    </TabBar>


</Shell>
